<%= image_tag @portfolio_item.main_image if !@portfolio_item.main_image.nil? %>
<h1><%= @portfolio_item.title %></h1>
<h3><%= @portfolio_item.subtitle %></h3>
<p><%= @portfolio_item.body %></p>

<h2>Technologies Used:</h2>
<% @portfolio_item.technologies.each do |t| %>
  <ul>
    <li><%= t.name %></li>
  </ul>
<% end %>
<br>
<%= link_to "Portfolio Items", portfolio_items_path %><br>
<%= link_to "Edit Portfolio Item", edit_portfolio_item_path(@portfolio_item) %><br>
<%= link_to "Delete", portfolio_item_path(@portfolio_item), method: :delete, data: { confirm: "Are you sure?" } %>