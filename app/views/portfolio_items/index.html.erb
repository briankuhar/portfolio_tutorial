<h1>Portfolio Items</h1>

<p id="notice"><%= notice %></p>

<%= link_to "New Portfolio Item", new_portfolio_item_path %>
<hr>

<% @portfolio_items.each do |p| %>
  <p><%= p.title %></p>
  <p><%= p.subtitle %></p>
  <p><%= p.body %></p>
  <%= image_tag p.thumb_image if !p.thumb_image.nil? %><br>
  <%= link_to "Edit", edit_portfolio_item_path(p) %>
  <hr>
<% end %>